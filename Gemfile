  gem 'rspec-rails', '~> 6.0'
  gem 'factory_bot_rails', '~> 6.2'
  gem 'webmock', '~> 3.19'
  gem 'vcr', '~> 6.2'
  gem 'pry-rails', '~> 0.3'
  gem 'rubocop', '~> 1.56'
  gem 'rubocop-rails', '~> 2.21'
  gem 'rubocop-rspec', '~> 2.24'
end

# Test coverage
group :test do
  gem 'simplecov', '~> 0.22'
  gem 'simplecov-lcov', '~> 0.8'
end
